package oops;

public class thread_communication {

	public static void main(String[] args) {
		surya s=new surya();
		s.start();
		
		System.out.println("hi");

	}

}
class surya extends  Thread{
	int num=0;
	@Override
	public void run() {
		
	for(int i=1;i<5;i++) {
		System.out.println(num=num+i);
	}
	}
	
}